= form_for @user_info do |f|
  - if @user_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_info.errors.count, "error")} prohibited this user_info from being saved:"
      %ul
        - @user_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .actions
    = f.submit 'Save'
